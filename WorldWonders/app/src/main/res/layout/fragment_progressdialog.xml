<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.ciandt.worldwonders.fragments.ProgressDialogFragment">

    <ImageView
        android:id="@+id/animation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/animation2"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/animation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/animation3"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/animation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/animation4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/animation3"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/animation5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/animation4"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        />

</RelativeLayout>
